{
    "name": "route-generator-api",
    "version": "0.0.0",
    "author": "Alexey Soloviev",
    "private": true,
    "engines": {
        "npm": ">=11.0.0 <12.0.0",
        "node": ">=24.0.0 <25.0.0"
    },
    "scripts": {
        "build": "nest build",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "lint": "eslint .",
        "lint:fix": "npm run lint -- --fix",
        "lint:pre-commit": "npm run lint:fix",
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*.{js,mjs,ts,json}": [
            "npm run lint:pre-commit"
        ]
    },
    "dependencies": {
        "@langchain/core": "1.1.0",
        "@langchain/langgraph": "1.0.4",
        "@langchain/openai": "1.1.3",
        "@langfuse/langchain": "4.4.3",
        "@langfuse/otel": "4.4.1",
        "@langfuse/tracing": "4.4.1",
        "@nestjs/common": "11.0.1",
        "@nestjs/config": "4.0.2",
        "@nestjs/core": "11.0.1",
        "@nestjs/platform-express": "11.0.1",
        "@opentelemetry/sdk-node": "0.208.0",
        "class-transformer": "0.5.1",
        "class-validator": "0.14.2",
        "dotenv": "16.4.7",
        "langchain": "1.1.1",
        "langchain-gigachat": "0.0.14",
        "reflect-metadata": "0.2.2",
        "route-generator-util": "0.0.0",
        "rxjs": "7.8.1"
    },
    "devDependencies": {
        "@nestjs/cli": "11.0.0",
        "@nestjs/schematics": "11.0.0",
        "@nestjs/testing": "11.0.1",
        "@types/express": "5.0.0",
        "@types/jest": "30.0.0",
        "@types/node": "22.10.7",
        "@types/supertest": "6.0.2",
        "jest": "30.0.0",
        "prettier": "3.4.2",
        "source-map-support": "0.5.21",
        "supertest": "7.0.0",
        "ts-jest": "29.4.5",
        "ts-loader": "9.5.2",
        "ts-node": "10.9.2",
        "tsconfig-paths": "4.2.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
